@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registreren";
}

<h1>Registreren</h1>
<h4 id="external-login-title">Verbind je Ion Squad-account met je @Model.ProviderDisplayName-account.</h4>
<hr/>

<p id="external-login-description" class="text-info">
    Je registratie via <strong>@Model.ProviderDisplayName</strong> was succesvol.
    Geef hieronder het e-mailadres in waarmee je je Ion Squad-account wilt verbinden:
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registreren</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}