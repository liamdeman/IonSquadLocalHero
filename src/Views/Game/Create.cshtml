@model Proj2Aalst_G3.Models.Domain.Game

@{
    ViewData["Title"] = "Aanmaken";
}

<h1>Aanmaken</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginService" class="control-label"></label>
                <input asp-for="LoginService" class="form-control" />
                <span asp-validation-for="LoginService" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToornamentAlias" class="control-label"></label>
                <textarea asp-for="ToornamentAlias" class="form-control"></textarea>
                <span asp-validation-for="ToornamentAlias" class="text-danger"></span>                
            </div>
            <div class="form-group">
                <label asp-for="DiscordIconId" class="control-label"></label>
                <textarea asp-for="DiscordIconId" class="form-control"></textarea>
                <span asp-validation-for="DiscordIconId" class="text-danger"></span>                
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
                    <a asp-action="Index">Terug naar lijst</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}