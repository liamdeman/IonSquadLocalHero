@{
    ViewData["Title"] = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="row d-flex align-items-center">
        <div class="col-10">
            <h1>Games</h1>
        </div>
        @if (User.IsInRole("admin"))
        {
            <div class="col-2">
                <button class="btn btn-primary" type="submit" onclick="location.href='@Url.Action("Create", "Game")'">
                    <i class="fas fa-plus"></i>
                    Game aanmaken
                </button>
            </div>
        }
    </div>
    <hr/>
    <div class="row pt-3 d-flex justify-content-center text-center">
        @await Component.InvokeAsync("GameList")
    </div>
</div>