<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proj2Aalst_G3</title>
    <link rel="stylesheet" href="~/dist/bundle.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                @* Logo, Local Hero *@
                <a class="navbar-brand d-flex justify-content-around align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="/images/IonSquad_logo.png" alt="IonSquad Logo" width="50" height="50" class="me-3">
                    Local Hero
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @* Different pages *@
                <div class="collapse navbar-collapse justify-content-between" id="navbarToggleExternalContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tournaments" asp-action="Index">Toernooien</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Blogpost" asp-action="Index">Nieuwsoverzicht</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Matchmaking" asp-action="Index">Matchmaking</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Game" asp-action="Games">Games</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="AdminDashboard" asp-action="Index">Statistieken</a></li>
                                    <li><a class="dropdown-item" asp-controller="AdminDashboard" asp-action="Games">Games</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    @* Search profiles *@
                    <form class="d-flex" asp-controller="Player" asp-action="Index" method="get">
                        <input class="form-control me-1 text-dark" type="search" placeholder="Spelersnaam" aria-label="Search" name="searchString">
                        <button class="btn btn-outline-success me-3" type="submit">Zoeken</button>
                    </form>
                    @* Account *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
    </nav>
</header>
<div class="container" style="margin-top: 5.19642857143rem">
    <main role="main">
        @RenderBody()
    </main>
</div>
<footer class="footer text-muted">
    <div class="container d-flex flex-row justify-content-around">
        <div class="flex-grow-1">
            &copy; 2021 - Codified
        </div>
        <div>
            <img src='~/images/PoweredByToornament_White.png' alt='Toornament' width="225" height="53" class="mr-3" />
        </div>
    </div>
</footer>
<script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"></script>
<script src="~/dist/bundle.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>