@model IEnumerable<Proj2Aalst_G3.Models.Domain.Blogpost>

<div class="container mt-2">
    @if (!Model.Any())
    {
        <p>Momenteel zijn er geen berichten.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="mb-3 text-wrap">
                    <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                    <h6>@Html.DisplayFor(modelItem => item.PublicationTime)</h6>
                    <p class="text-truncate" style="max-width: 70%">@Html.DisplayFor(modelItem => item.Text)</p>
                    <a asp-controller="Blogpost" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <hr/>
                </div>
            </div>
        }
    }
</div>