@model IEnumerable<Proj2Aalst_G3.Models.Domain.Game>

<div class="row">
    @foreach (var game in Model)
    {
        <div class="col-12 col-lg-4 mb-5 mb-lg-0">
            <h4>@game.Name</h4>
            <div>
                @if (User.IsInRole("admin"))
                {
                    <a asp-controller="Game" asp-action="Detail" asp-route-id="@game.Id">
                        <img src="~/images/gamebanners/@(game.ToornamentAlias).png" width="228" height="361">
                    </a>
                }
                else
                {
                    <img src="~/images/gamebanners/@(game.ToornamentAlias).png" width="228" height="361">
                }
            </div>
        </div>
    }
</div>