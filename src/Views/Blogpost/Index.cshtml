@model IEnumerable<Proj2Aalst_G3.Models.Domain.Blogpost>


@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-10">
            <h1>Nieuwsoverzicht</h1>
        </div>
        @if (User.IsInRole("admin"))
        {
            <div class="col-2">
                <a asp-controller="Blogpost" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Bericht aanmaken
                </a>
            </div>
        }
    </div>
    <hr/>
    @await Component.InvokeAsync("BlogpostList")
</div>


